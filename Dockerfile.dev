# Development Dockerfile for Admin Portal with hot reload
FROM node:20-alpine

WORKDIR /app

# Install dependencies (will be cached if package.json doesn't change)
COPY package*.json ./
RUN npm ci

# Expose port
EXPOSE 5174

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5174"]



